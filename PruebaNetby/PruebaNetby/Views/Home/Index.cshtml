@{
    ViewData["Title"] = "Login";
}


<div class="text-center">
    <section class="vh-100">
        <div class="container-fluid h-custom">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-9 col-lg-6 col-xl-5">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                         class="img-fluid" alt="Sample image">
                </div>
                <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                    <form>
                        <h1>Login</h1>


                        <!-- Email input -->
                        <div data-mdb-input-init class="form-outline mb-4">
                            <input id="txtUsuario" type="text" id="form3Example3" class="form-control form-control-lg"
                                   placeholder="Usuario" />
                            <span id="lblUsuario" class="etiqueta_Error"></span>
                        </div>

                        <!-- Password input -->
                        <div data-mdb-input-init class="form-outline mb-3">
                            <input id="txtContrasenia" type="password" id="form3Example4" class="form-control form-control-lg"
                                   placeholder="Contraseña" />
                            <span id="lblContrasenia" class="etiqueta_Error"></span>
                        </div>
                        <div class="text-center text-lg-start mt-4 pt-2">
                            <button id="btnLogin" type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg"
                                    style="padding-left: 2.5rem; padding-right: 2.5rem;">
                                Login
                            </button>

                        </div>

                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
